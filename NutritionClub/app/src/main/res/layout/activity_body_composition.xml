<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nutritionclub.AccountActivity.BodyCompositionActivity"
    android:id="@+id/drawerLayout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.nutritionclub.AccountActivity.BodyCompositionActivity">

        <include layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </include>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="19dp"
            android:paddingTop="60dp"
            android:text="Water :" />

        <EditText
            android:id="@+id/waterF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            android:ems="10"
            android:hint="Water %"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/weightF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/waterF"
            android:layout_alignStart="@+id/waterF"
            android:layout_below="@+id/waterF"
            android:ems="10"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fatpF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/weightF"
            android:layout_alignStart="@+id/weightF"
            android:layout_below="@+id/weightF"
            android:ems="10"
            android:hint="Fat %"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat% :"
            android:layout_alignBaseline="@+id/fatpF"
            android:layout_alignBottom="@+id/fatpF"
            android:layout_alignRight="@+id/textView20"
            android:layout_alignEnd="@+id/textView20" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/weightF"
            android:layout_alignBottom="@+id/weightF"
            android:layout_toLeftOf="@+id/waterF"
            android:layout_toStartOf="@+id/waterF"
            android:text="Weight :" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vfatF"
            android:layout_alignBottom="@+id/vfatF"
            android:layout_alignEnd="@+id/textView19"
            android:layout_alignRight="@+id/textView19"
            android:text="Visceral Fat :" />

        <EditText
            android:id="@+id/vfatF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fatpF"
            android:layout_alignStart="@+id/fatpF"
            android:layout_below="@+id/fatpF"
            android:ems="10"
            android:hint="Visceral Fat"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/boneMassF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vfatF"
            android:layout_alignStart="@+id/vfatF"
            android:layout_below="@+id/vfatF"
            android:ems="10"
            android:hint="Bone Mass"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView21"
            android:layout_alignRight="@+id/textView21"
            android:layout_below="@+id/vfatF"
            android:layout_marginTop="11dp"
            android:text="Bone Mass" />

        <EditText
            android:id="@+id/metaAgeF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/boneMassF"
            android:layout_alignStart="@+id/boneMassF"
            android:layout_below="@+id/boneMassF"
            android:ems="10"
            android:hint="Metabolic Age"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metabolic Age :"
            android:layout_below="@+id/boneMassF"
            android:layout_alignBottom="@+id/metaAgeF"
            android:layout_alignRight="@+id/textView22"
            android:layout_alignEnd="@+id/textView22"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21" />

        <EditText
            android:id="@+id/muscleF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/metaAgeF"
            android:layout_alignStart="@+id/metaAgeF"
            android:layout_below="@+id/metaAgeF"
            android:ems="10"
            android:hint="Muscle"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView23"
            android:layout_alignRight="@+id/textView23"
            android:layout_below="@+id/textView23"
            android:layout_marginTop="11dp"
            android:text="Muscle :" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="Save"
            android:layout_below="@+id/muscleF"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

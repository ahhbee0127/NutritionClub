<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.nutritionclub.AccountActivity.ShowBodyDetailActivity"
android:id="@+id/drawerLayout">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nutritionclub.AccountActivity.ShowBodyDetailActivity">

    <include layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>

    <TextView
        android:id="@+id/dateV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myV"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/myV"
        android:layout_toRightOf="@+id/myV"

        android:paddingTop="10dp"
        android:text="Date"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/fatpercentV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weightV"
        android:layout_alignStart="@+id/weightV"
        android:layout_below="@+id/weightV"
        android:layout_marginTop="18dp"
        android:text="Fat(%)"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/weightV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dateV"
        android:layout_alignStart="@+id/dateV"
        android:layout_below="@+id/dateV"
        android:layout_marginTop="21dp"
        android:text="Weight"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/fatkgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fatpercentV"
        android:layout_alignStart="@+id/fatpercentV"
        android:layout_below="@+id/fatpercentV"
        android:layout_marginTop="23dp"
        android:text="Fat(kg)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/visceralFatV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fatkgV"
        android:layout_alignStart="@+id/fatkgV"
        android:layout_alignTop="@+id/textView15"
        android:text="Visceral Fat"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/boneMassV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/visceralFatV"
        android:layout_alignStart="@+id/visceralFatV"
        android:layout_below="@+id/visceralFatV"
        android:layout_marginTop="14dp"
        android:text="Bone Mass"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/myV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="60dp"
        android:text="Body Composition"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateV"
        android:layout_alignBottom="@+id/dateV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Date :" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fatpercentV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Weight :" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fatpercentV"
        android:text="Fat(%) :" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fatkgV"
        android:text="Fat(kg) :" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Visceral Fat :" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boneMassV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Bone Mass :" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="28dp"
        android:text="Metabolic Age :" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="27dp"
        android:text="Muscle :" />

    <TextView
        android:id="@+id/metaAgeV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignLeft="@+id/boneMassV"
        android:layout_alignStart="@+id/boneMassV"
        android:text="Metabolic Age"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/muscleV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignLeft="@+id/metaAgeV"
        android:layout_alignStart="@+id/metaAgeV"
        android:text="Muscle"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView25"
        android:layout_marginTop="30dp"
        android:text="BMI :" />

    <TextView
        android:id="@+id/bmiV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView28"
        android:layout_alignBottom="@+id/textView28"
        android:layout_alignLeft="@+id/muscleV"
        android:layout_alignStart="@+id/muscleV"
        android:text="BMI"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bmiV"
        android:layout_marginTop="22dp"
        android:text="Water(%) :" />

    <TextView
        android:id="@+id/waterV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignLeft="@+id/bmiV"
        android:layout_alignStart="@+id/bmiV"
        android:text="Water(%)"
        android:textSize="18sp" />

    <Button
        android:id="@+id/commentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/waterV"
        android:layout_marginTop="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/commentV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/waterV"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:text="No comment from coach."
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>
    </ScrollView>

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:menu="@menu/navigation_menu"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_header">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

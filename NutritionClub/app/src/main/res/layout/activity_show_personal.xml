<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nutritionclub.AccountActivity.ShowPersonalActivity"
    android:id="@+id/drawerLayout">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.nutritionclub.AccountActivity.ShowPersonalActivity">

            <include layout="@layout/navigation_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </include>

            <TextView
                android:id="@+id/nameV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Name"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_marginTop="16dp"

                android:layout_below="@+id/myV"
                android:layout_toRightOf="@+id/myV"
                android:layout_toEndOf="@+id/myV"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp" />

            <TextView
                android:id="@+id/heightV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Height"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_below="@+id/ageV"
                android:layout_alignLeft="@+id/ageV"
                android:layout_alignStart="@+id/ageV" />

            <TextView
                android:id="@+id/ageV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Age"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_below="@+id/nameV"
                android:layout_alignLeft="@+id/nameV"
                android:layout_alignStart="@+id/nameV" />

            <TextView
                android:id="@+id/contactV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/heightV"
                android:layout_alignStart="@+id/heightV"
                android:layout_below="@+id/heightV"
                android:layout_marginTop="23dp"
                android:text="Contact"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/inviterV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inviter"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_alignTop="@+id/textView15"
                android:layout_alignLeft="@+id/contactV"
                android:layout_alignStart="@+id/contactV" />

            <TextView
                android:id="@+id/ncBranchV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Nutrition Club"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_below="@+id/inviterV"
                android:layout_alignLeft="@+id/inviterV"
                android:layout_alignStart="@+id/inviterV" />

            <TextView
                android:id="@+id/myV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:text="My Details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:layout_alignBaseline="@+id/nameV"
                android:layout_alignBottom="@+id/nameV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/heightV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Age :" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/heightV"
                android:text="Height :" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/contactV"
                android:text="Contact :" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Inviter :" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ncBranchV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Nutrition Club :" />
        </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
